<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E5EC"
    tools:context=".MainActivity">

    <soup.neumorphism.NeumorphFloatingActionButton
        android:id="@+id/button_torch"
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="50dp"
        android:scaleType="fitCenter"
        app:neumorph_shapeType="flat"
        android:src="@drawable/ic_power_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_backgroundColor="#E0E5EC"
        app:neumorph_shadowColorDark="#A3B1C6"
        app:neumorph_shadowColorLight="#ebeff3"
        app:neumorph_shadowElevation="6dp" />

    <soup.neumorphism.NeumorphFloatingActionButton
        android:id="@+id/button_vibrate"
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="22dp"
        android:src="@drawable/ic_vibrate_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeType="flat"
        app:neumorph_backgroundColor="#E0E5EC"
        app:neumorph_shadowColorDark="#A3B1C6"
        app:neumorph_shadowColorLight="#ebeff3"/>

</androidx.constraintlayout.widget.ConstraintLayout>